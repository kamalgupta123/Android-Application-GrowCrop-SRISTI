<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/activity_detail_actitvity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.farm.sristi.ssis17..LoginActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:id="@+id/ivdetailClub"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#ada0e9"
            android:text="Sample"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:id="@+id/tvNameDetailClub"/>
        <TextView
            android:textStyle="italic"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="4dp"
            android:text="descrpition"
            android:id="@+id/tvDesDetailClub"/>

    </LinearLayout>
</ScrollView>
