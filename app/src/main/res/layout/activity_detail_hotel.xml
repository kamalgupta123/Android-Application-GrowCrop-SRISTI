<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/activity_detail_hotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.farm.sristi.ssis17.DetailActivityHotel">

            <ImageView
                android:id="@+id/ivdetailH"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Sample"
                android:textSize="26dp"
                android:id="@+id/tvNameDetailH"/>

            <TextView
                android:id="@+id/tvDesDetailH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="descrpition"
                android:textColor="#530101"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:id="@+id/tvphoneDetailH"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>